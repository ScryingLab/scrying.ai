name: Project Issue Template
description: Project Issue Template
title: "[Issue]: "
labels:
  - triage
assignees: []
body:
  - type: markdown
    attributes:
      value: |
        Use this template to create a new issue with a standard set of prompts.

  - type: textarea
    id: user-story
    attributes:
      label: "User Story"
      description: "Describe the user story or high-level context for this issue."
      placeholder: "As a [user], I want to..."
    validations:
      required: true

  - type: textarea
    id: acceptance-criteria
    attributes:
      label: "Acceptance Criteria"
      description: "List conditions that must be met for this issue to be considered complete."
      placeholder: "- [ ] Example A/C 1\n- [ ] Example A/C 2"
    validations:
      required: true

  - type: textarea
    id: notes
    attributes:
      label: "Notes"
      description: "Include any additional context or information related to this issue."
      placeholder: "Additional details or informationâ€¦"
    validations:
      required: false

  - type: textarea
    id: references
    attributes:
      label: "References"
      description: "Provide links or references (e.g., design specs, documents) if applicable."
      placeholder: "https://example.com"
    validations:
      required: false
